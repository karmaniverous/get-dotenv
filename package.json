{
  "author": "Jason Williscroft",
  "auto-changelog": {
    "output": "CHANGELOG.md",
    "unreleased": true,
    "commitLimit": false,
    "hideCredit": true
  },
  "bin": {
    "getdotenv": "./dist/getdotenv.cli.mjs"
  },
  "bugs": {
    "url": "https://github.com/karmaniverous/get-dotenv/issues"
  },
  "dependencies": {
    "commander": "^14.0.1",
    "dotenv": "^17.2.2",
    "execa": "^9.6.0",
    "fs-extra": "^11.3.1",
    "globby": "^14",
    "nanoid": "^5.1.5",
    "package-directory": "^8.1.0"
  },
  "description": "Process dotenv files in an arbitrary location & optionally populate environment variables.",
  "devDependencies": {
    "@dotenvx/dotenvx": "^1.49.1",
    "@eslint/js": "^9.35.0",
    "@rollup/plugin-alias": "^5.1.1",
    "@rollup/plugin-commonjs": "^28.0.6",
    "@rollup/plugin-json": "^6.1.0",
    "@rollup/plugin-node-resolve": "^16.0.1",
    "@rollup/plugin-typescript": "^12.1.4",
    "@types/fs-extra": "^11.0.4",
    "@types/node": "^22",
    "@vitest/coverage-v8": "^3.2.4",
    "auto-changelog": "^2.5.0",
    "esbuild": "^0.23.0",
    "eslint": "^9.35.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-jsonc": "^2.20.1",
    "eslint-plugin-prettier": "^5.5.4",
    "eslint-plugin-simple-import-sort": "^12.1.1",
    "eslint-plugin-tsdoc": "^0.4.0",
    "eslint-plugin-vitest": "^0.5.4",
    "fs-extra": "^11.3.1",
    "globals": "^16.4.0",
    "jsonc-eslint-parser": "^2.4.0",
    "knip": "^5.63.1",
    "lefthook": "^1.13.0",
    "prettier": "^3.6.2",
    "release-it": "^19.0.4",
    "rimraf": "^6.0.1",
    "rollup": "^4.50.2",
    "rollup-plugin-dts": "^6.2.3",
    "tslib": "^2.8.1",
    "tsx": "^4.20.5",
    "typedoc": "^0.28.13",
    "typedoc-plugin-mdn-links": "^5.0.9",
    "typedoc-plugin-replace-text": "^4.2.0",
    "typescript": "^5.9.2",
    "typescript-eslint": "^8.43.0",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "^3.2.4"
  },
  "engines": {
    "node": ">=22.19"
  },
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.mts",
        "default": "./dist/index.mjs"
      },
      "require": {
        "types": "./dist/index.d.cts",
        "default": "./dist/index.cjs"
      }
    }
  },
  "files": [
    "dist"
  ],
  "homepage": "https://github.com/karmaniverous/get-dotenv#readme",
  "keywords": [
    "cli",
    "configuration",
    "developer-tools",
    "development-environment",
    "devops",
    "dotenv-management",
    "environment-variables",
    "json",
    "nodejs",
    "typescript"
  ],
  "license": "BSD-3-Clause",
  "main": "dist/index.cjs",
  "name": "@karmaniverous/get-dotenv",
  "peerDependencies": {
    "esbuild": "*"
  },
  "peerDependenciesMeta": {
    "esbuild": {
      "optional": true
    }
  },
  "publishConfig": {
    "access": "public"
  },
  "release-it": {
    "git": {
      "changelog": "npx auto-changelog --stdout --template https://raw.githubusercontent.com/release-it/release-it/main/templates/changelog-compact.hbs",
      "commitMessage": "chore: release v${version}",
      "requireBranch": "main"
    },
    "github": {
      "release": true
    },
    "hooks": {
      "after:init": [
        "npm run lint",
        "npm run test",
        "npm run build"
      ],
      "after:release": [
        "git switch -c release/${version}",
        "git push -u origin release/${version}",
        "git switch ${branchName}"
      ]
    },
    "npm": {
      "publish": true
    }
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/karmaniverous/get-dotenv"
  },
  "scripts": {
    "build": "rimraf dist && rollup --config rollup.config.ts --configPlugin @rollup/plugin-typescript",
    "cli": "tsx src/cli/getdotenv",
    "cli:dist": "node dist/getdotenv.cli.mjs",
    "changelog": "auto-changelog",
    "docs": "typedoc",
    "knip": "knip",
    "lint": "eslint . eslint.config.ts",
    "lint:fix": "eslint --fix . eslint.config.ts",
    "release": "dotenvx run -f .env.local -- release-it",
    "release:pre": "dotenvx run -f .env.local -- release-it --no-git.requireBranch --github.prerelease --preRelease",
    "stan:docs": "typedoc --emit none",
    "test": "vitest run --coverage",
    "typecheck": "tsc -p tsconfig.json --noEmit"
  },
  "type": "module",
  "types": "dist/index.d.ts",
  "version": "4.5.2"
}
