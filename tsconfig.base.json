{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["*"],
      "@karmaniverous/get-dotenv/cli": ["src/cli/index.ts"],
      "@karmaniverous/get-dotenv/cliHost": ["src/cliHost/index.ts"],
      "@karmaniverous/get-dotenv/core": ["src/core/index.ts"]
    },
    "rootDir": ".",
    "emitDeclarationOnly": false,
    "exactOptionalPropertyTypes": true,
    "module": "esnext",
    "moduleDetection": "force",
    "moduleResolution": "bundler",
    "noEmit": true,
    "noUncheckedIndexedAccess": true,
    "noUncheckedSideEffectImports": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "strict": true,
    "stripInternal": true,
    "target": "esnext",
    "types": ["node"],
    "verbatimModuleSyntax": true
  },
  "include": ["src/**/*.ts"],
  "exclude": [
    "templates/**",
    "test/**",
    ".stan/**",
    "tools/**",
    "dist/**",
    "esm/**",
    "node_modules/**"
  ]
}
