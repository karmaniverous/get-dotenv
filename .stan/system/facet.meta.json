{
  "cliHost": {
    "exclude": [
      "src/cliHost/**",
      "src/e2e/**",
      "src/interop/**",
      "src/schema/**"
    ],
    "include": ["src/cliHost/index.ts"]
  },
  "docs": {
    "exclude": ["guides/**"],
    "include": ["guides/index.md"]
  },
  "dotenv": {
    "exclude": [
      "src/config/**",
      "src/diagnostics/**",
      "src/e2e/**",
      "src/env/**",
      "src/schema/**",
      "src/types/**"
    ],
    "include": ["src/config/index.ts"]
  },
  "plugins": {
    "exclude": ["src/plugins/**"],
    "include": [
      "src/plugins/index.ts",
      "src/plugins/aws/index.ts",
      "src/plugins/batch/index.ts",
      "src/plugins/cmd/index.ts",
      "src/plugins/demo/index.ts",
      "src/plugins/init/index.ts",
      "src/plugins/aws/whoami.ts"
    ]
  },
  "templates": {
    "exclude": ["templates/**"],
    "include": ["templates/cli/ts/index.ts"]
  },
  "tests": {
    "exclude": ["test/**", "src/**/*.test.ts", "src/e2e/**"]
  },
  "tools": {
    "exclude": ["tools/**"]
  }
}
