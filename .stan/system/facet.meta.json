{
  "cliHost": {
    "exclude": [
      "src/cliHost/**",
      "src/e2e/**",
      "src/interop/**",
      "src/schema/**"
    ],
    "include": ["src/cliHost/index.ts"]
  },
  "docs": {
    "exclude": ["guides/**"],
    "include": ["guides/stan-assistant-guide.md"]
  },
  "dotenv": {
    "exclude": [
      "src/config/**",
      "src/diagnostics/**",
      "src/dotenv/**",
      "src/e2e/**",
      "src/env/**",
      "src/schema/**"
    ],
    "include": [
      "src/config/index.ts",
      "src/diagnostics/index.ts",
      "src/dotenv/index.ts",
      "src/env/index.ts",
      "src/schema/index.ts"
    ]
  },
  "plugins": {
    "exclude": ["src/plugins/**"],
    "include": ["src/plugins/index.ts"]
  },
  "templates": {
    "exclude": ["templates/**"],
    "include": ["templates/cli/ts/index.ts"]
  },
  "tests": {
    "exclude": ["test/**", "src/**/*.test.ts", "src/e2e/**"]
  },
  "tools": {
    "exclude": ["tools/**"]
  }
}
